    <script>
        function handlePurchase() {
            alert('💎 This is a demo project for portfolio purposes.\n\nIn a real implementation, this would redirect to a secure payment processor.');
        }

        // Smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth'
                    });
                }
            });
        });
    </script>
